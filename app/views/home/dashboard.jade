                    div.col-xs-6.col-sm-3.placeholder
                        img(data-src="holder.js/200x200/auto/vine", class="img-responsive", alt="200x200", src="data:image/svg+xml;base64,")
                        h4 Label
                        span.text-muted Something else
                h2.sub-header Image previews
                div.images
                    ul.images-holder
